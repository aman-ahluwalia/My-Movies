<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:id="@+id/frameBackground"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/background" tools:context=".MainActivityFragment">

    <GridView android:id="@+id/gridview_movies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numColumns="auto_fit"
        android:columnWidth="@dimen/columnWidthValue"
        android:horizontalSpacing="@dimen/horizontalSpacingValue"
        android:verticalSpacing="@dimen/verticalSpacingValue"
        android:stretchMode="columnWidth"
        android:gravity="center"/>

</FrameLayout>
