<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:id="@+id/fragment_detail_back"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:scaleType="centerCrop"
    android:background="@color/background"
    tools:context="com.example.aman.moviesapp.DetailsActivityFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/imageMarginTop"
        android:layout_marginLeft="@dimen/imageMarginLeft" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Movie Name"
        android:id="@+id/title"
        android:textColor="@color/text"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/titleMarginTop" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Synosis of the Movie"
        android:id="@+id/synopsis"
        android:textColor="@color/text"
        android:layout_below="@+id/title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/synopsisMarginTop" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="User Rating"
        android:id="@+id/rating_label"
        android:textColor="@color/text"
        android:layout_marginTop="@dimen/userRatingMarginTop"
        android:layout_below="@+id/synopsis"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rating"
        android:id="@+id/rating_value"
        android:textColor="@color/text"
        android:layout_alignBottom="@+id/rating_label"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Release Year"
        android:id="@+id/release_year_label"
        android:textColor="@color/text"
        android:layout_marginTop="@dimen/releaseYearMarginTop"
        android:layout_below="@+id/rating_label"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="year"
        android:id="@+id/release_year_value"
        android:textColor="@color/text"
        android:layout_alignBottom="@+id/release_year_label"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
